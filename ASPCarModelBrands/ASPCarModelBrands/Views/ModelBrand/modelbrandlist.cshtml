<form method="post" asp-action="LoadBrandModel">
    <select name="brandidselected">
        @{
            foreach (var a in (List
            <ASPCarModelBrands.Models.Brand>
                )ViewBag.brands)
            {
                <option value="@a.id">@a.name</option>
            }
        }
    </select>
    <input type="submit" value="Вывести"/>
</form>
<br />
<br />

<table class="table table-striped table-bordered dt-responsive nowrap table-sbm" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>Model ID</th>
            <th>Brand ID</th>
            <th>Model Name</th>
            <th>Model Active</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var a in (List
            <ASPCarModelBrands.Models.Model>
                )ViewBag.models)
            {
                <tr>
                    <td>@a.id</td>
                    <td>@a.brandid</td>
                    <td>@a.name</td>
                    <td>@a.active</td>
                </tr>
            }
        }
    </tbody>
</table>
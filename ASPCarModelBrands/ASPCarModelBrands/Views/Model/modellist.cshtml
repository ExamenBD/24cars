@{
    ViewData["Title"] = "Model list";
}
<h1>@ViewData["Title"]</h1>

<p>Model list.</p>
<form method="post" asp-action="modellistSave">
    <label>Бренд:</label><br />
    <select name="brandid">
        @{
            foreach (var a in (List
            <ASPCarModelBrands.Models.Brand>
                )ViewBag.brand)
            {
                <option value="@a.id">@a.name</option>
            }
        }
    </select><br /><br />
    <label>Модель:</label><br />
    <input type="text" name="namemodel" /><br /><br />
    <select name="active">
        <option value="true">true</option>
        <option value="false">false</option>
    </select><br /><br />
    <input type="submit" value="Добавить" />
</form>



<table class="table table-striped table-bordered dt-responsive nowrap table-sbm" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>Model ID</th>
            <th>Brand ID</th>
            <th>Model Name</th>
            <th>Model Active</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var a in (List
            <ASPCarModelBrands.Models.Model>
                )ViewBag.model)
            {
                if (a.active == true)
                {
                <tr style="background: #fc0;">
                    <td>@a.id</td>
                    <td>@a.brandid</td>
                    <td>@a.name</td>
                    <td>@a.active</td>
                </tr>
                }
                else
                {
    <tr>
        <td> @a.id</td>
        <td> @a.brandid</td>
        <td> @a.name</td>
        <td> @a.active</td>
        
    </tr>
                }
            }
            }
    </tbody>
</table>

<form method="post" asp-action="editmodellist">
    <label>МодельID:</label><br />
    <select name="modelid">
        @{
            foreach (var a in (List
            <ASPCarModelBrands.Models.Model>
                )ViewBag.model)
            {
                <option value="@a.id">@a.id</option>
            }
        }
    </select><br /><br />
    <label>БрендID:</label><br />
    <select name="brandid">
        @{
            foreach (var a in (List
            <ASPCarModelBrands.Models.Brand>
                )ViewBag.brand)
            {
                <option value="@a.id">@a.id</option>
            }
        }
    </select><br /><br />
    <label>Модель:</label><br />
    <input type="text" name="namemodel" /><br /><br />
    <select name="active">
        <option value="true">true</option>
        <option value="false">false</option>
    </select><br /><br />
    <input type="submit" value="Изменить" />
</form>